{
  "name": "revu",
  "version": "1.0.0",
  "description": "Automated PR reviews using Claude Sonnet API",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
