    "dotenv": "^16.3.1",
    "handlebars": "^4.7.8",
    "probot": "^12.3.1",
    "simple-git": "^3.21.0",
    "smee-client": "^2.0.4"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "nodemon": "^3.0.2",
    "prettier": "^3.4.2",
    "tsc-watch": "^6.2.1"
  }
